@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <link rel="stylesheet" href="../../Content/bootstrap.css" />
    <style>
        body {
            width: 100%;
            height: 100%;
        }
        .bg {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            -wekit-filter: blur(10px);
            filter: blur(10px);
            z-index:-1;
        }
        .box {
            width: 600px;
            height: 300px;
            padding: 0px 40px 20px 20px;
            border-radius: 20px;
            margin: 150px auto;
            background:rgba(0, 0, 0,0.5);
        }
        .title{
            line-height:80px;
            border-bottom:1px solid #eee;
            margin-bottom:15px;
            color:#fff;
        }
        .errorTip{
            color:#f00;
            font-size:12px;
            font-weight:600;
        }
        label{
            color:#fff;
        }
    </style>
</head>
<body>
    <img class="bg" src="../../images/bg.jpg"/>
    <div class="container">
        <div class="row">
            <div class="box">
                <h1 class="text-center title">WIFI室内定位系统后台管理界面</h1>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="ursername" class="col-md-3 control-label" >用户名</label>
                        <div class="col-md-9">
                            <input type="text" name="username" id="username" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-3 control-label">密码</label>
                        <div class="col-md-9">
                            <input type="password" name="password" id="password" class="form-control" />
                        </div>
                   </div>
                   <div class="form-group">
                       <div class="col-md-9 col-md-offset-3">
                           <span class="errorTip"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <div class="col-md-offset-3 col-md-9">
                           <input type="submit" value="登录" class="btn btn-primary" id="submit"/>
                       </div>
                    </div> 
                </div>
            </div> 
        </div>
    </div>
    <script src="../../Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script>

        $('#submit').click(function () {
            var username = $('#username').val();
            var password = $('#password').val();
            if (username === "" || password === "") {
                $('.errorTip').text("输入不能为空");
                return;
            }
            if (isNaN(password)) {
                $('.errorTip').text("密码格式不正确，必须为数字");
                return;
            }
            if (password.length < 6 || password.length > 12) {
                $('.errorTip').text("密码为6~12位数字");
                return;
            }
            $('.errorTip').css('display', 'none');

            $.ajax({
                url: "/api/Login",
                type: "POST",
                timeout: 20000,
                data:{"username":username,"password":password},
                beforeSend: function () {
                    $('#submit').attr('disabled',true);
                },
                success: function (str) {
                    $('#submit').attr('disabled', false);
                    var data = JSON.parse(str);
                    if (data.status != 1) {
                        $('.errorTip').css('display', 'block').text(data.message);

                    } else {
                        window.location.replace('/Home/LocationShow');
                    }
                },
                error: function () {
                    $('#submit').attr('disabled', false);
                    $('.errorTip').css('display', 'block').text("未知异常，登录失败");
                }
                });
        });
    </script>
</body>
</html>
