@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>房间实时监控</title>
    <link rel="stylesheet" href="../../Content/bootstrap.css" />
    <style>
        body {
            background: #eee;
        }

        .top {
            position: fixed;
            top: 0;
            width: 100%;
            height: 60px;
            background: #428bca;
            font-size: 25px;
            color: #fff;
            line-height: 60px;
            padding: 0 10px;
            z-index: 999;
        }

        .exit {
            font-size: 16px;
            line-height: 60px;
            cursor: pointer;
        }

            .exit:hover {
                color: #ddd;
            }

        .main {
            display: flex;
            padding-top: 60px;
        }

        .left_nav {
            width: 15%;
            height: 100%;
            background: #fff;
            padding-top: 40px;
            position: fixed;
        }

        .right {
            margin-left: 15%;
            width: 85%;
            background: #eee;
        }

        .nav-pills > li > a {
            border-radius: 0px;
        }
        .map{
            border:1px solid #000;
        }
        .count{
            display:none;
        }
    </style>
</head>
<body>
    <div class="top">
        WIFI室内定位系统后台管理界面
        <span id="exit" class="exit pull-right">退出</span>
    </div>
    <div class="main">
        <div class="left_nav">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="/Home/LocationShow">定位精度分析</a></li>
                <li class="active"><a href="/Home/RoomShow">房间实时监控</a></li>
                <li><a href="/Home/CoordDataShow">步行轨迹分析</a></li>
            </ul>
        </div>
        <div class="right">
            <h1 class="text-center">房间实时监控</h1>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-2">
                        <select id="room" class="form-control"></select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn-primary btn" id="check">查看房间</button>
                    </div> 
                    <div class="col-md-2 count">
                        <p>当前房间人数：<span id="people">0</span></p>
                    </div>
                </div>
                <div>
                        <canvas id="myMap" style="background:#eee;margin:20px auto;display:none;"></canvas>
                </div>
            </div>
        </div>
    </div>

   
    <script src="../../Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/echarts.common.min.js" type="text/javascript"></script>
    <script src="../../Scripts/location/room.js" type="text/javascript"></script>
    <script>
        $('#exit').click(function () {
            window.location.replace("/Home/Login");
        });
    </script>
</body>
</html>
